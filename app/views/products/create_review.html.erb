<div class="container">
  <div class="product-container">
    <div class="product-header">
      <h1>
        Whatâ€™s your rating?
      </h1>

      <%= form_with url: "/review/create", method: :post, id: "create_review_form" do |form| %>
         <%= form.hidden_field :product_id, value: params[:product_id] %>

        <label for="rating__rating">Rating</label>
        <%= render partial: "shared/stars", locals: { custom_id: "rating", form: true } %>

        <%= form.label :review, "Review" %>
        <%= form.text_field :review, class: "input__text__field", placeholder: "Start typing...", required: true %>

        <%= form.submit "Submit Review", class: "btn__primary" %>
      <% end %>
  </div>
</div>
